{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome against localhost",
			"url": "http://localhost:8080/",
			"webRoot": "${workspaceRoot}",
			"runtimeArgs": [
				"--remote-debugging-port=9222"
			],
			"userDataDir": "${workspaceRoot}/.vscode/chrome"		
		},
		{
			"type": "chrome",
			"request": "attach",
			"name": "Attach to Chrome",
			"port": 9222,
			"webRoot": "${workspaceRoot}"
		}
	]
}